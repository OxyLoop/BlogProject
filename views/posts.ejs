<%- include("partials/header.ejs") %>

<h1>All Blog Posts</h1>

<% if (posts.length === 0) { %>
    <p>No posts yet. <a href="/create">Create one</a>!</p>
<% } else { %>
    <% posts.forEach(post => { %>
        <div class="post">
            <h2><%= post.title %></h2>
            <p><%= post.content %></p>
        </div>
    <% }); %>
<% } %>

